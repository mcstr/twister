<div class="content">
  <%= simple_form_for(@twist) do |f| %>
    <%= f.error_notification %>
    <div class="field">
      <div class="control">
        <%= f.input :twist, label: "Twist about it", input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new twist..." %>
      </div>
    </div>
    <%= f.button :submit, class: "button is-info"%>
  <% end %>
</div>
