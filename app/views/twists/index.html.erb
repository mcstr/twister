<p id="notice"><%= notice %></p>

<h1>Twists</h1>

<table>
  <thead>
    <tr>
      <th>Twist</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @twists.each do |twist| %>
      <tr>
        <td><%= twist.twist %></td>
        <td><%= link_to 'Show', twist %></td>
        <td><%= link_to 'Edit', edit_twist_path(twist) %></td>
        <td><%= link_to 'Destroy', twist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Twist', new_twist_path %>
