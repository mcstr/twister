<div class="column is-half">
    <% if user_signed_in? %>
    <article class="media box">
        <figure class="meida-left">
            <p class="image is-64x64">
                <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
            </p>
        </figure>
        <div class="media-content">
            <%= render 'twists/form' %>
        </div>
    </article>
    <% end %>
    <% @twists.each do |twist| %>
    <div class="box">
        <article class="media">
            <div class="media-left">
                <figure class="image is-64x64">
                    <%= gravatar_image_tag(twist.user.email, size: 64, alt: twist.user.name) %>
                </figure>
            </div>
            <div class="media-content">
                <div class="content">
                    <strong>
                        <%= twist.user.name %></strong><br />
                    <small>
                        <%= twist.user.username %></small><br />
                    <p>
                        <%= twist.twist %>
                    </p>
                </div>
                <% if user_signed_in? %>
                <nav class="level">
                    <div class="level-left is-mobile">
                        <%= link_to twist, class: "level-item" do %>
                        <span class="icon"><i class="fa fa-link" arian-hidden="true"></i></span>
                        <%end %>
                        <%= link_to edit_twist_path(twist), class: "level-item" do %>
                        <span class="icon"><i class="fa fa-pencil" arian-hidden="true"></i></span>
                        <%end %>
                        <%= link_to twist, method: :delete, data: {confirm: "Are you sure you want to delete this twist?"} do%>
                        <span class="icon"><i class="fa fa-trash-o" arian-hidden="true"></i></span>
                        <% end %>
                    </div>
                </nav>
                <%end %>
            </div>
        </article>
    </div>
    <% end %>
</div>