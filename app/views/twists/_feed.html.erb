<div class="column is-half">
  <article class="media box">
    <figure class="meida-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'twists/form' %>
    </div>
  </article>
  <% @twists.each do |twist| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/64x64.png">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <strong>Mike Caster</strong><br />
            <small>@esecadiweno</small><br />
            <p><%= twist.twist %></p>
          </div>
          <nav class="level">
            <div class="level-left is-mobile">
              <%= link_to twist, class: "level-item" do %>
                <span class="icon"><i class="fa fa-link" arian-hidden="true"></i></span>
              <%end %>
              <%= link_to edit_twist_path(twist), class: "level-item" do %>
                <span class="icon"><i class="fa fa-pencil" arian-hidden="true"></i></span>
              <%end %>
              <%= link_to twist, method: :delete, data: {confirm: "Are you sure you want to delete this twist?"} do%>
                <span class="icon"><i class="fa fa-trash-o" arian-hidden="true"></i></span>
              <% end %>
            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
</div>
